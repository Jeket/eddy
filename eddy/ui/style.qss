/**
 * MAIN WINDOW
 */
QMainWindow::separator {
    height: 0;
    margin: -10px;
    padding: 0;
    width: 10px;
}
/**
 * TOOLBAR
 */
QToolBar {
    padding: 4px;
    spacing: 2px;
    border: 0;
}
QToolBar QToolButton {
    border: 1px solid transparent;
}
QToolBar QToolButton:hover {
    background: #CFD8DC;
    border: 1px solid #90A4AE;
}
QToolBar QToolButton:checked,
QToolBar QToolButton:pressed {
    background: #B0BEC5;
    border: 1px solid #607D8B;
}
QToolBar QToolButton::menu-indicator {
    image: none;
}
QToolBar QToolButton.zoom {
    width: 34px;
    height: 24px;
}
/**
 * DOCK WIDGETS
 */
QDockWidget {
    border: 1px solid transparent;
    titlebar-close-icon: url(:/icons/close);
}
QDockWidget::title {
    border-top: 1px solid #BABABA;
    border-bottom: 1px solid #BABABA;
    padding: 4px;
    text-align: center;
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0.0 #E0E0E0, stop: 0.3 #DCDCDC,
                                stop: 0.7 #DBDBDB, stop: 1.0 #D3D3D3);
}
QDockWidget::close-button {
    border: 1px solid transparent;
    background: transparent;
    right: 6px;
    top: 3px;
}
QDockWidget::close-button:hover {
    border-color: #BABABA;
    border-radius: 2px;
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0.0 #D0D0D0, stop: 0.3 #CCCCCC,
                                stop: 0.7 #CBCBCB, stop: 1.0 #C3C3C3);
}
QDockWidget QWidget {
    border: 0;
}
QDockWidget Palette {
    background: #EAEAEA;
}
QDockWidget Palette QToolButton {
    /*background: #E0E0E0;*/
    /*border: 1px solid #BABABA;*/
}
QDockWidget Palette QToolButton:checked {
    background: #4FC3F7;
    /*border: 1px solid #455A64;*/
}
/**
 * TAB BAR
 */
QTabBar {
    qproperty-drawBase: 0;
}
QTabBar:focus {
    border: 0;
}
QTabBar::close-button  {
    image: url(:/icons/close);
    background: transparent;
    border: 1px solid transparent;
}
QTabBar::close-button:hover {
    border-color: #BABABA;
    border-radius: 2px;
    background: qlineargradient(x1:0, y1 : 0, x2 : 0, y2 : 1,
                                stop : 0.0 #D0D0D0, stop : 0.3 #CCCCCC,
                                stop : 0.7 #CBCBCB, stop : 1.0 #C3C3C3);
}
QTabBar::tab:top {
    border: 1px solid #BABABA;
    border-bottom: 0;
    height: 24px;
    min-width: 80px;
    padding: 0 10px;
}
QTabBar::tab:top:selected {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0.0 #F8F8F8, stop: 0.3 #F4F4F4,
                                stop: 0.7 #F0F0F0, stop: 1.0 #EDEDED);
}
QTabBar::tab:top:!selected {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0.0 #E0E0E0, stop: 0.3 #DCDCDC,
                                stop: 0.7 #DBDBDB, stop: 1.0 #D3D3D3);
}
QTabBar::tab:top:!last {
    border: 1px solid #BABABA;
    border-right: 0;
    border-bottom: 0;
}
QTabBar::tab:top:only-one {
    border: 1px solid #BABABA;
    border-bottom: 0;
}
/**
 * MDI AREA
 */
QMdiArea {
    border: 1px solid #BABABA;
    border-top: 0;
}
/**
 * TAB WIDGET
 */
QTabWidget::pane {
    border: 1px solid #A9A9A9;
}
/**
 * MAIN VIEW
 */
MainView {
    border-top: 1px solid #A9A9A9;
}
/**
 * SCROLL BAR
 */
QScrollBar {
    background: transparent;
    margin: 0;
    height: 12px;
    width: 12px;
}
QScrollBar::handle {
    border: 1px solid #555555;
    border-radius: 4px;
    margin: 1px;
}
QScrollBar::handle:vertical {
    background: qlineargradient(x1: 0, y1: 0, x2: 1, y2: 0, stop:0 #5C5C5C, stop:1 #515151);
    min-height: 20px;
    min-width: 8px;
}
QScrollBar::handle:vertical:hover {
    background: qlineargradient(x1: 0, y1: 0, x2: 1, y2: 0, stop:0 #666666, stop:1 #5B5B5B);
}
QScrollBar::handle:horizontal {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1, stop:0 #5C5C5C, stop:1 #515151);
    min-height: 8px;
    min-width: 20px;
}
QScrollBar::handle:horizontal:hover {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1, stop:0 #666666, stop:1 #5B5B5B);
}
QScrollBar::add-page:vertical, QScrollBar::sub-page:vertical,
QScrollBar::add-page:horizontal, QScrollBar::sub-page:horizontal {
    background: transparent;
}
QScrollBar::add-line:vertical, QScrollBar::sub-line:vertical,
QScrollBar::add-line:horizontal, QScrollBar::sub-line:horizontal {
    height: 0;
    width: 0;
}
/**
 * SLIDER
 */
QSlider::groove:horizontal {
    border: 1px solid #555555;
    height: 6px;
    background: #CFD8DC;
    margin: 2px 0;
    border-radius: 2px;
}
QSlider::handle:horizontal {
    background: #37474F;
    border: 1px solid #263238;
    width: 12px;
    height: 12px;
    margin: -4px 0;
    border-radius: 2px;
}
/**
 * MENU
 */
QMenu {
    border: 1px solid #A9A9A9;
    background: #EDEDED;
    margin: 4px;
}
QMenu::icon {
    margin: 5px;
}
QMenu::indicator {
    width: 18px;
    height: 18px;
}
QMenu::item  {
    border: 1px solid transparent;
    color: #6A6A6A;
    font-size: 12px;
    margin-left: 5px;
    padding: 5px 30px 5px 30px;
}
QMenu::item:selected {
    color: #000000;
}
QMenu::separator {
    height: 1px;
    background: #A9A9A9;
    margin-left: 8px;
    margin-right: 4px;
}
/**
 * POPUPS
 */
QMessageBox QLabel {
    font-weight: normal;
}
QLabel.invalid {
    color: #ec3f3a;
}
